  <!-- the part to the right of the side-bar: NEW dbfeat creation form -->
  <div id="dbf_new_create" class="large-12 medium-12 small-12 columns hidden">
    <form>
      <fieldset>
        <legend>$labels.getString("dbfeat.new.intro")</legend>
        <div id="dbf_new" class="large-16 medium-16 small-16 row">
          <div id="dbf_new_top" class="large-16 medium-16 small-16 row">
            <!-- DbFeat NAME -->
            <div class="large-16 medium-16 small-16 row">
              <div class="large-2 medium-3 small-4 columns">
                <label for="right-label" class="left inline">$labels.getString("dbfeat.general.name")</label>
              </div>
              <div class="large-9 medium-8 small-7 columns left">
                <input id="dbf_new_name" class="left general_input" type="text" placeholder="feature name (no spaces)">
                <small id="dbf_new_name_error" class="hidden">Name must be new and not have spaces</small>
              </div>
            </div>
            <!-- DbFeat PRE -->
            <div class="large-16 medium-16 small-16 row">
              <div class="large-5 medium-5 small-5 large-offset-2 medium-offset-3 small-offset-4 columns left">
                <input type="checkbox" id="dbf_new_pre">
                <label for="dbf_new_pre">$labels.getString("dbfeat.general.pre")</label>
              </div>
            </div>
          </div>
          <div id="dbf_new_buttons"  class="large-16 medium-16 small-16 row">
            <a href="#" onclick="crpstudio.project.createItem('dbfeat','new');" class="button search small radius">$labels.getString("dbfeat.new.create")</a>
            <a href="#" onclick="crpstudio.project.createItem('dbfeat','cancel');" class="button search small radius">$labels.getString("dbfeat.new.cancel")</a>
          </div>
        </div>
      </fieldset>
    </form>
  </div>