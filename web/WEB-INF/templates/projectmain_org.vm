#set($new_project_manual = $labels.getString("project.create.manual"))
#set($new_project_wizard = $labels.getString("project.create.wizard"))

<!-- side bar: names of projects of this user -->
<div id="crplist" class="large-16 medium-16 small-16 row">
  <!-- the left side-bar used for selecting a project -->
  <div id="project_selector" class="large-4 medium-4 small-4 columns hidden">
    <h5>${project}</h5>
    <!-- place where the currently select project is stored -->
    <div id="project_current" class="hidden"></div>
    <!-- Room for two buttons -->
    <div class="row">
      <!-- Allow user to upload a .crpx file -->
      <div class="uploadbutton large-6 medium-6 small-6 columns">
        <label for="general_upload" class="uploadCrpxBtn">$labels.getString("project.upload")</label>
        <input id="general_upload" class="uploadfile" type="file" onchange="Crpstudio.project.uploadCrpFile(this);">
      </div>
      <!-- Allow user to download a .crpx file -->
      <div class="uploadbutton large-6 medium-6 small-6 columns">
        <label for="general_download" class="uploadCrpxBtn">$labels.getString("project.download")</label>
        <input id="general_download" class="uploadfile" onclick="Crpstudio.project.downloadCrpFile(this);">
      </div>
      <!-- Allow user to remove a .crpx file -->
      <div class="uploadbutton large-4 medium-4 small-4 columns">
        <label for="general_removeCRP" class="uploadCrpxBtn">$labels.getString("project.remove")</label>
        <input id="general_removeCRP" class="uploadfile" onclick="Crpstudio.project.removeCrpFile(this);">
      </div>
    </div>
    <div id="project_download" class="row hidden">
      <span>$labels.getString("result.export.intro"): </span>
      <span id="project_download_file"></span>
    </div>
    <!-- <ul class="crpstudio-side-nav"> -->
    <ul id="project_list" class="side-nav">
      <li class="create-project"><a href="#" onclick="Crpstudio.project.createManual(this)">$new_project_manual</a></li>
      <li class="create-project"><a href="#" onclick="Crpstudio.project.createWizard(this)">$new_project_wizard</a></li>
      <li class="divider"></li>
      ${projecttable}
    </ul>
  </div>

  <!-- NEW ATTEMPT at a side-bar -->
  <div id="project_selector_new" class="large-4 medium-4 small-4 columns">
    <div class="sidebar">
      <h5>Project selection</h5>
      <nav>
        <ul class="side-nav">
        </ul>
      </nav>
    </div>
  </div>

  <!-- the part to the right of the side-bar may contain contents of this project -->
  <div id="project_editor" class="large-12 medium-12 small-12 columns">
    <form>
      <fieldset>
        <legend>$labels.getString("general")</legend>
        <div id="project_description" class="large-16 medium-16 small-16 row">
          <i>(no project selected)</i>
        </div>
        <div id="project_general" class="large-16 medium-16 small-16 row hidden">
          <div id="project_general_top" class="large-16 medium-16 small-16 row">
            <!-- The top-left contains name, author, type and goal -->
            <div id="project_general_left" class="large-11 medium-11 small-11 columns">
              <!-- Project NAME -->
              <div class="large-16 medium-16 small-16 row">
                <div class="large-6 medium-6 small-6 columns">
                  <Label for="right-label" class="right inline">$labels.getString("project.general.name")</Label>
                </div>
                <div class="large-10 medium-10 small-10 columns">
                  <div class="large-16 medium-16 small-16 row collapse">
                    <div class="large-14 medium-14 small-14 columns">
                      <input id="project_general_name" class="general_input" type="text" placeholder="name (no spaces)">
                    </div>
                    <div class="large-2 medium-2 small-2 columns">
                      <span class="postfix">.crpx</span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="large-16 medium-16 small-16 row">
                <!-- Project AUTHOR -->
                <div class="large8 medium-8 small-8 columns">
                  <div class="row">
                    <div class="large-6 medium-6 small-6 columns">
                      <Label for="right-label" class="right inline">$labels.getString("project.general.author")</Label>
                    </div>
                    <div class="large-10 medium-10 small-10 columns">
                      <input id="project_general_author" class="general_input" type="text" placeholder="creator of this project">
                    </div>
                  </div>
                </div>
                <!-- Project PRJTYPE -->
                <div class="large8 medium-8 small-8 columns">
                  <div class="row">
                    <div class="large-6 medium-6 small-6 columns">
                      <Label for="right-label" class="right inline">$labels.getString("project.general.prjtype")</Label>
                    </div>
                    <div class="large-10 medium-10 small-10 columns">
                      <input id="project_general_prjtype" class="general_input" type="text" placeholder="kind of project">
                    </div>
                  </div>
                </div>
              </div>
              <!-- Project's GOAL -->
              <div class="large-12 medium-12 small-12 row">
                <Label>$labels.getString("project.general.goal")
                  <textarea id="project_general_goal" spellcheck="false" placeholder="goal of this project" rows="3"></textarea>
                </Label>
              </div>
            </div>
            <!-- The top-right contains data and project-specific preferences -->
            <div id="project_general_right" class="large-5 medium=5 small-5 columns">
              <div class="row">$labels.getString("project.general.datecreated"): 
                <div id="project_general_datecreated" class="project_general_date">-</div></div>
              <div class="row">  </div>
              <div class="row">$labels.getString("project.general.dateedited"): 
                <div id="project_general_datechanged" class="project_general_date">-</div></div>
              <div class="row">  </div>
              <div class="row collapse">
                <input type="checkbox" id="project_general_showsyn">
                <label for="project_general_showsyn">$labels.getString("project.general.showsyn")</label>
              </div>
            </div>
          </div>
          <!-- The bottom contains the comments for this project -->
          <div id="project_general_bottom" class="large-16 medium-16 small-16 row">
            <Label>$labels.getString("project.general.comments"):
              <textarea id="project_general_comments"  spellcheck="false" placeholder="Comments on this project" rows="20"></textarea>
            </Label>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
<div id="project_status" class="large-16 medium-16 small-16">
  <p></p>
</div>

